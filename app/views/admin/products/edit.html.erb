<section class="admin-products-edit">

  <header class="page-header">
    <h1>Admin &raquo; Edit Product</h1>
  </header>

  <div class="row">
    <div class="col-sm-offset-1">
      <%= form_for [:admin, @product] do |form| %>

        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="admin-product-wrapper">
            <div class="image-content">
                <div class="form-group">
                    <%= image_tag @product.image.thumb %>
                    <%= form.file_field :image, :onchange => "previewFile();" %>
                </div>
            </div>
            
            <div class="info-content">
                <div class="form-group">
                    <%= form.label :name %>
                    <%= form.text_field :name, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= form.label :description %>
                    <%= form.text_area :description, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= form.label :category %>
                    <%= form.select :category_id, options_from_collection_for_select(Category.all.order(:name), :id, :name), { include_blank: true }, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= form.label :quantity %>
                    <%= form.number_field :quantity, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= form.label :price %>
                    <%= form.text_field :price, class: 'form-control' %>
                </div>
            </div>
        </div>
        
        <div class="submit-btn">
            <%= form.submit 'Update Product', class: 'btn btn-primary' %>
            <%= link_to 'Cancel', [:admin, :products], class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  </div>

</section>
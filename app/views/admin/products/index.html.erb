<section class="admin-products-index">

  <header class="page-header">
    <h1>My Inventory <span class="pull-right"><%= link_to '+ New Product', [:new, :admin, :product], class: 'btn btn-info' %></span></h1>
  </header>

  <div class="panel-custom panel-default products">

    <table class="table">
      <thead>
        <tr>
          <th colspan="2" style="border: none;">Product</th>
          <th>Category</th>
          <th>Price</th>
          <th>Qty Remaining</th>
          <th style="border: none;"></th>
        </tr>
      </thead>
      <tbody>
        <%= render @products %>
      </tbody>
    </table>

  </div>

</section>

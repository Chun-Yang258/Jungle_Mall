<section class="authentication-container">
    <div class="forms-container">
        <div class="signin-signup">
            <%= form_tag '/login', method: :post, :class => 'sign-in-form' do %>
                <h2 class="title">Sign In</h2>
                <div class="input-field">
                    <i class="fa fa-user"></i>
                    <%= text_field_tag :email, nil, placeholder: 'Username' %>
                </div>
                <div class="input-field">
                    <i class="fa fa-lock"></i>
                    <%= password_field_tag :password, nil, placeholder: 'Password' %>
                </div>
                <%= submit_tag "Sign In", :class => 'login-btn solid' %>
                <p class="social-text">Or Sign in with social platforms</p>
                <div class="social-media">
                    <a href="#" class="social-icon">
                        <i class="fa fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fa fa-twitter"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fa fa-google"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fa fa-linkedin"></i>
                    </a>
                </div>
            <% end %>

            <%= form_for :users, url: '/users', method: :post, :html => {:class => 'sign-up-form'} do |f| %>
                <h2 class="title">Sign Up</h2>
                <div class="input-field">
                    <i class="fa fa-user"></i>
                    <%= text_field_tag :username, nil, placeholder: 'Username' %>
                </div>
                <div class="input-field">
                    <i class="fa fa-envelope"></i>
                    <%= text_field_tag :email, nil, placeholder: 'Email' %>
                </div>
                <div class="input-field">
                    <i class="fa fa-lock"></i>
                    <%= password_field_tag :password, nil, placeholder: 'Password' %>
                </div>
                <div class="input-field">
                    <i class="fa fa-lock"></i>
                    <%= password_field_tag :password_confirmation, nil, placeholder: 'Confirm Password' %>
                </div>
                <p>Register As Merchant? <%= f.check_box :is_merchant %></p>
                
                
                <%= submit_tag "Sign Up", :class => 'login-btn solid' %>
                <p class="social-text">Or sign up with social platforms</p>
                <div class="social-media">
                    <a href="#" class="social-icon">
                        <i class="fa fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fa fa-twitter"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fa fa-google"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fa fa-linkedin"></i>
                    </a>
                </div>
            <% end %>
        </div>
    </div>
    <div class="login-panels-container">
        <div class="login-panel left-panel">
            <div class="content">
                <h3>New here ?</h3>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Minus impedit quidem quibusdam?</p>
                <button class="login-btn transparent" id="sign-up-btn">Sign Up</button>
            </div>
            <%= image_tag "undraw_maker_launch_crhe.svg", class: "image" %>
        </div>
        <div class="login-panel right-panel">
            <div class="content">
                <h3>One of us ?</h3>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Minus impedit quidem quibusdam?</p>
                <button class="login-btn transparent" id="sign-in-btn">Sign In</button>
            </div>
            <%= image_tag "undraw_press_play_bx2d.svg", class: "image" %>
        </div>
    </div>
</section>

